{{ define "nav-index"}}
    {{ if .IsLogin }}
        <nav>
            <a class="add-post" href="/post">post</a>
        </nav>
    {{ end }}
{{ end }}

<div class="home">
    <div class="posts">
        {{ range .Posts }}
        <div class="post">
            <div class="body">{{.Body}}</div>
            <ul class="resources">
            {{ range .Resources }}
                <li><img width="{{.Width}}" height="{{.Height}}" src="{{.URL}}" /></li>
            {{ end }}
            </ul>
            <div class="label">
                <a class="link" href="/m/{{.ID.Hex}}">#</a>
                <span class="time">{{.CreatedAt.Format "01-02 15:04" }}</span>
            </div>
        </div>
        {{ end }}
    </div>
</div>
