{{ define "nav-index"}}
    {{ if .IsLogin }}
        <nav>
            <a class="add-post" href="/post">post</a>
        </nav>
    {{ end }}
{{ end }}

{{ define "footer-index" }}
    <footer>
        by massimo
    </footer>
{{ end }}

<div class="home">
    <div class="posts">
        {{ range .Posts }}
        <div class="post">
            <div class="body">{{.HTML}}</div>
            <ul class="resources">
            {{ range .Resources }}
            <li><a target="_blank" href="{{.URL}}"><img src="{{.URL}}?w=400" /></a></li>
            {{ end }}
            </ul>
            <div class="label">
                <a class="link" href="/m/{{.ID.Hex}}">#</a>
                <span class="time">{{.CreatedAt.Format "01-02 15:04" }}</span>
            </div>
        </div>
        {{ end }}
    </div>
</div>
